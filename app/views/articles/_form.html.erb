<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <%= form_for @article do |form| %>
        <%= form.label :title %>
        <%= form.text_field :title %>
        <%= form.label :content %>
        <%= form.text_field :content %>
        <%= form.submit %>
      <% end %>
    </div>
  </div>
</div>
