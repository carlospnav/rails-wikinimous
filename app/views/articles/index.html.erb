<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <% @articles.each do |article| %>
        <article>
          <h2>
            <%= link_to article.title, article_path(article) %>
          </h2>
          <%= article.content %>
        </article>
      <% end %>
      <%= link_to "Create new Article", new_article_path %>
    </div>
  </div>
</div>
